<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type='ecplugins.workflowDashboard.client.workflowDashboardMain.Style'>

        .topPanel {
            width: 100%;
        }
        .vPanel {
            width: 100%;
        }
        .projectHeader{
            width: 20ex;
        }
        .procedureHeader{
            width: 30ex;
        }

        .historyHeader{
            width: 80ex;
        }

        .lastRunHeader{
            width: 40ex;
        }
        .descriptionHeader{
            width: 60ex;
        }
        .vPanel>tbody>tr>td {
            color: #333333;
            padding: 3px 6px;
            vertical-align: top;
        }
        .important {
            font-weight: bold;
        }
        .link {
            text-align: right;
        }
        .mouseCursor {
            cursor: hand;
        }
        @external evenRow;
        .evenRow {
            background: #DEDEE4;
        }
        @external oddRow;
        .oddRow {
            background: #F1F1F4;
        }
        @external h2;
        .h2 {
            font-size: 127%;
            font-weight: bold;
            color: #687291;
        }

        .headerRow {
            background-image: url("/commander/lib/images/bg_listviewheader.gif");
            background-position: center top;
            background-repeat: repeat-x;
            border-bottom: 2px solid #BCBEC4;
            border-right: 1px solid #BCBEC4;
            color: #333333;
            vertical-align: top;
            text-align: center;
            white-space: nowrap;
            padding: 3px;
        }
    </ui:style>

<g:VerticalPanel width="100%">
	<g:HorizontalPanel width="100%">
        <g:cell horizontalAlignment="ALIGN_LEFT">
            <g:Label ui:field="dashboardTitle" styleName="{style.h2}"></g:Label>
        </g:cell>
         <g:cell horizontalAlignment="ALIGN_RIGHT">
              <g:Label ui:field="refreshLink">Refreshing in:</g:Label>
        </g:cell>
        <g:cell horizontalAlignment="ALIGN_RIGHT">
              <g:Anchor ui:field="configureLink">Configure Dashboard</g:Anchor>
        </g:cell>
	</g:HorizontalPanel>
    <g:Label ui:field="errorMessage" visible="false" />
	<g:FlexTable ui:field="dashboardPanel" visible="true" width="100%"/>
</g:VerticalPanel>
</ui:UiBinder>